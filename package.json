{
    "name": "crypto-forecasting-ai",
    "version": "1.0.0",
    "description": "AI-powered crypto trading platform with ML-driven predictions and Bitget API integration",
    "main": "index.js",
    "scripts": {
      "install:all": "npm run install:frontend && npm run install:backend",
      "install:frontend": "cd frontend && npm install",
      "install:backend": "cd backend && npm install",
      "install:ml": "cd ml && pip install -r requirements.txt",
      "start:dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
      "start:backend": "cd backend && npm run dev",
      "start:frontend": "cd frontend && npm start",
      "start:ml": "cd ml/api && uvicorn main:app --reload",
      "build": "cd frontend && npm run build",
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
      "crypto",
      "trading",
      "AI",
      "ML",
      "forecasting",
      "bitget"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
      "concurrently": "^8.0.1"
    }
  }